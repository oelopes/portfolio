---
import heroImage from '@assets/hero.png';
import { Picture } from "astro:assets";
import { MapPin } from 'lucide-react';

import { Button } from './ui/button';

interface Props {
  content: {
    title: string
    description: string
    location: string
    occupation: string
    actionButton: string
  }
}

const { content } = Astro.props
---

<section id="hero">
  <div class="grid grid-cols-12 gap-4 py-10 lg:py-0 lg:pt-40 lg:pb-20">
    <div class="col-span-12 lg:col-span-6 space-y-4">
      <h1 class="text-5xl font-bold">{content.title}</h1>
      <p>{content.description}</p>

      <div class="flex flex-col gap-4">
        <div class="flex items-center gap-2">
            <MapPin />

            <span>{content.location}</span>
        </div>

        <div class="flex items-center gap-4">
          <span class="size-4 bg-lime-400 rounded-full animate-pulse"/>

          <span>{content.occupation}</span>
        </div>
      </div>

      <a class="block" href="https://www.linkedin.com/in/oelopes/" target="_blank">
        <Button variant="secondary">{content.actionButton}</Button>
      </a>
    </div>
    <div class="hidden lg:block lg:col-span-4 lg:col-start-9 justify-end">
      <Picture 
        src={heroImage}
        alt="Leonardo coding"
        widths={[200, 400, 600]}
        sizes="(max-width: 800px) 100vw, 620px"
        loading="eager"
        format="avif"
      />
    </div>
  </div>
</section>
